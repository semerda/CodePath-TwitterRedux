platform :ios, '10.0'

target 'CodePath-Twitter' do

    use_frameworks!

    # https://github.com/AFNetworking/AFNetworking
    # This pulls in the latest version of AFNetworking >= 2.6 but less than 3.0.
    pod 'AFNetworking', '~> 3.0.0'

    # https://github.com/bdbergeron/BDBOAuth1Manager
    # OAuth 1.0a library for AFNetworking 2.x
    pod 'BDBOAuth1Manager', '~> 2.0.0'
  
    # https://github.com/jdg/MBProgressHUD
    pod 'MBProgressHUD', '~> 1.0.0'

    # https://github.com/kirualex/SwiftyGif
    # High performance GIF engine
    # Using Swift3 version in Classes
    #pod 'SwiftyGif', '~> 2.0.0'

    # https://github.com/optonaut/ActiveLabel.swift
    # UILabel drop-in replacement supporting Hashtags (#), Mentions (@) and URLs (http://)
    # Installed manually since Swift 3 support failed
    #pod 'ActiveLabel', '~> 0.7.0'

    target 'CodePath-TwitterTests' do
        inherit! :search_paths
        # Pods for testing
    end

end
